<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="inside">
            <t t-if="this.env.pos.order_name">
                <br/>
                <t t-if="this.env.pos.config.pos_receipt">
                    <div style="font-weight:bold;">Order Ref Number:
                        <t t-esc="this.env.pos.order_name"/>
                    </div>
                </t>
            </t>
        </xpath>
    </t>
</templates>