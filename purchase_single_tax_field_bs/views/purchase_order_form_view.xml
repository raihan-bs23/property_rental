<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="purchase_order_form_view_inherit_tax_invisible" model="ir.ui.view">
        <field name="name">purchase_order_form_view_inherit_tax_invisible</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="show_update_tax_button" invisible="1"/>
                <label for="tax_ids"/>
                <div class="o_row">
                    <field name="tax_ids" widget="many2many_tags"/>
                    <button name="update_tax_vat" type="object"
                            string=" Update tax/vat"
                            help="Recompute all taxes in the line based on "
                            class="btn-link mb-1 px-0" icon="fa-refresh"
                            confirm="This will update all unit prices based on the currently set pricelist."
                            attrs="{'invisible': ['|', ('show_update_tax_button', '=', False), ('state', 'in', ['purchase', 'done','cancel'])]}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='taxes_id']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>
</odoo>