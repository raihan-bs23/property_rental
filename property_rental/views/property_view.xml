<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View to show all the data in tree wise-->
    <record id="rental_property_details_view_tree" model="ir.ui.view">
        <field name="name">rental.property.view.tree</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <tree string="Property_Tree">
                <field name="property_name"/>
                <field name="property_tag_ids" widget="many2many_tags" placeholder="Select property tag"
                       options="{'color_field': 'color'}"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="property_type_ids" widget="many2many_tags" placeholder="Select property type"
                       options="{'color_field': 'color'}"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="property_condition"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!--    Form View to edit data in a form-->
    <record id="rental_property_details_view_form" model="ir.ui.view">
        <field name="name">rental.property.view.form</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <form string="Rental_Property_Form">
                    <header>
                        <field name="offer_status" invisible="1"/>
                        <field name="offer_partner" invisible="1"/>
                        <field name="current_user" invisible="1"/>
                        <field name="invoice_sent" invisible="1"/>
                        <button name="send_invoice" type="object" string="Create Invoice"
                                icon="fa-check"
                                groups="property_rental.property_rental_owner"
                                attrs="{'invisible': [('offer_status', '!=', 'accepted')]}"/>

                        <button name="property_rent_confirm" type="object" string="Confirm Rent"
                                icon="fa-check"
                                groups="property_rental.property_rental_owner"
                                attrs="{'invisible': [('status', '!=', 'reserved')]}"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button class="oe_stat_button" type="action"
                                    name="%(property_rental.rental_offers_model_action)d"
                                    icon="fa-money" groups="property_rental.property_rental_owner">
                                <field string="Offers" name="offer_count" widget="statinfo"/>
                            </button>
                            <button class="oe_stat_button" type="action" string="Add Offers"
                                    name="%(property_rental.add_offers_model_action_tenant)d"
                                    icon="fa-plus" context="{'default_property_ids': active_id}"
                                    groups="property_rental.property_rental_tenant">
                            </button>
                            <button class="oe_stat_button" type="object"
                                    name="get_view_invoice"
                                    icon="fa-pencil-square-o"
                                    attrs="{'invisible': [('invoice_sent', '=', False), ('current_user', '!=', 'offer_partner')]}">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Rented" attrs="{'invisible': [('status', '!=', 'rented')]}"/>
                        <h1>
                            <field name="property_name" widget="text_area" placeholder="Enter property name"
                                   attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}" cols="50"/>
                            <field name="image" widget="image" class="oe_avatar"/>
                            <br/>
                            <br/>
                        </h1>
                        <group>
                            <group>
                                <field name="status" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                <field name="postcode" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                <field name="address" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                <field name="property_condition" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                <field name="date_availability" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                            </group>
                            <group>
                                <field name="rented_price"/>
                                <field name="property_type_ids" widget="many2many_tags"
                                       placeholder="Select property type"
                                       options="{'color_field': 'color'}" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                <field name="property_tag_ids" widget="many2many_tags" placeholder="Select property tag"
                                       options="{'color_field': 'color'}" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="property_description" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="bedrooms" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="living_area" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="facades" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="garage" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="garden" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="garden_orientation"
                                               attrs="{'invisible': [('garden', '=', False)]}"/>
                                        <field name="active" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                    </group>
                                </page>
                                <page string="Offers" groups="property_rental.property_rental_tenant">
                                    <field name="offer_ids"
                                           attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}">
                                        <tree string="Property Offers" editable="button"
                                              decoration-success="status == 'accepted'"
                                              decoration-danger="status == 'refused'">
                                            <field name="rental_type" />
                                            <field name="rental_duration"/>
                                            <field name="total_expected_rent"/>
                                            <field name="price"/>
                                            <field name="partner_id"/>
                                            <field name="validity"/>
                                            <field name="date_deadline"/>
                                            <field name="status"/>
                                        </tree>
                                    </field>
                                </page>
                                <page string="Price Plan">
                                    <group>
                                        <field name="weekly_rent" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="monthly_rent" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                        <field name="yearly_rent" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                                    </group>
                                </page>
                                <page string="Others">
                                    <group>
                                        <field name="sales_man" />
                                        <field name="renter" readonly="True"/>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                        <field name="activity_ids" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                        <field name="message_ids" attrs="{'readonly': [('status', 'in', ['reserved', 'rented'])]}"/>
                    </div>
            </form>
        </field>
    </record>
    <!--     Kanban View to show all the data in tree wise-->
    <record id="rental_property_details_view_kanban" model="ir.ui.view">
        <field name="name">rental.property.view.kanban</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status" group_create="False" records_draggable="False">
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <field name="image" class="o_kanban_image_fill_left d-block"
                                   widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <h3>
                                        <field name="property_name"/>
                                    </h3>
                                </strong>
                                <strong>
                                    <span>Status:</span>
                                </strong>
                                <field name="status"/>
                                <br/>
                                <strong>
                                    <span>Property Condition:</span>
                                </strong>
                                <field name="property_condition"/>
                                <br/>
                                <strong>
                                    <span>Expected Rent:
                                        See price plan
                                    </span>
                                </strong>
                                <span>
                                    <br/>
                                    <field name="property_tag_ids" widget="many2many_tags"
                                           options="{'color_field': 'color'}"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="property_model_action" model="ir.actions.act_window">
        <field name="res_model">property.details</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'sequence':2, 'view_mode': 'kanban', 'view_id': ref('property_rental.rental_property_details_view_kanban')}),
                        (0, 0, {'sequence':3, 'view_mode': 'tree', 'view_id': ref('property_rental.rental_property_details_view_tree')}),
                        (0, 0, {'sequence':5, 'view_mode': 'form', 'view_id': ref('property_rental.rental_property_details_view_form')})]"/>
    </record>
</odoo>
