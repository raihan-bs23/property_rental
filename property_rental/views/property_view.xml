<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View to show all the data in tree wise-->
    <record id="rental_property_details_view_tree" model="ir.ui.view">
        <field name="name">rental.property.view.tree</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <tree string="Property_Tree">
                <field name="property_name"/>
                <field name="property_tag_ids" widget="many2many_tags" placeholder="Select property tag"
                       options="{'color_field': 'color'}"/>
                <field name="postcode"/>
                <field name="expected_rent_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="property_type_ids" widget="many2many_tags" placeholder="Select property type"
                       options="{'color_field': 'color'}"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="property_condition"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!--    Form View to edit data in a form-->
    <record id="rental_property_details_view_form" model="ir.ui.view">
        <field name="name">rental.property.view.form</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <form string="Rental_Property_Form" editable="bottom">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!--                        <button name="open_assignation_logs" type="object" class="oe_stat_button" icon="fa-history">-->
                        <!--                            <field name="property_type_ids" widget="statinfo" string="Drivers History"/>-->
                        <!--                        </button>-->
                    </div>
                    <h1>
                        <field name="property_name" widget="text_area" placeholder="Enter property name" cols="50"/>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <br/>
                        <br/>
                    </h1>
                    <group>
                        <group>
                            <field name="status" readonly="True"/>
                            <field name="postcode"/>
                            <field name="address"/>
                            <field name="property_condition"/>
                        </group>
                        <group>
                            <field name="expected_rent_price"/>
                            <field name="rented_price"/>
                            <field name="property_type_ids" widget="many2many_tags" placeholder="Select property type"
                                   options="{'color_field': 'color'}"/>
                            <field name="property_tag_ids" widget="many2many_tags" placeholder="Select property tag"
                                   options="{'color_field': 'color'}"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="property_description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="active"/>
                                </group>
                            </page>
                            <page string="Others">
                                <group>
                                    <field name="sales_man"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--     Kanban View to show all the data in tree wise-->
    <record id="rental_property_details_view_kanban" model="ir.ui.view">
        <field name="name">rental.property.view.kanban</field>
        <field name="model">property.details</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                            <field name="image" class="o_kanban_image_fill_left d-block"
                                   widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <h3>
                                        <field name="property_name"/>
                                    </h3>
                                </strong>
                                <strong>
                                    <span>Status:</span>
                                </strong>
                                <field name="status"/>
                                <br/>
                                <strong>
                                    <span>Property Condition:</span>
                                </strong>
                                <field name="property_condition"/>
                                <br/>
                                <strong>
                                    <span>Expected Rent:
                                        <field name="expected_rent_price"/>
                                        BDT
                                    </span>
                                </strong>
                                <span>
                                    <br/>
                                    <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="property_model_action" model="ir.actions.act_window">
        <field name="name">Property Details</field>
        <field name="res_model">property.details</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'sequence':2, 'view_mode': 'kanban', 'view_id': ref('property_rental.rental_property_details_view_kanban')}),
                        (0, 0, {'sequence':3, 'view_mode': 'tree', 'view_id': ref('property_rental.rental_property_details_view_tree')}),
                        (0, 0, {'sequence':5, 'view_mode': 'form', 'view_id': ref('property_rental.rental_property_details_view_form')})]"/>
    </record>

</odoo>
