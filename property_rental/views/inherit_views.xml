<odoo>
    <record id="inherit_confirm_payment_button" model="ir.ui.view">
            <field name="name">confirm.payment.button.inherit.account.payment.register</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer" position="inside">
                    <button name="property_offer_payment_confirm" type="object" string="Confirm Payment"
                                icon="fa-check" class="oe_highlight"
                                confirm="Are you sure to confirm payment ?"
                                groups="property_rental.property_rental_tenant"
                                attrs="{'invisible': [('offer_status', '!=', 'accepted')]}"/>
                </xpath>
            </field>
        </record>

