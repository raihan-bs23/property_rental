<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View to show all the data in tree wise-->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property_Tree" decoration-success="status == 'offer_received' or status == 'offer_accepted'"
                  decoration-bf="status == 'offer_accepted'"
                  decoration-muted="status == 'sold'" >
                     <header>
                    <button name="property_state_type_sold" type="object" string="SOLD"/>
                </header>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="tag_id" widget="many2many_tags" placeholder="Select property tag"
                       options="{'color_field': 'color'}"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="status"/>
                <field name="seller_id"/>
            </tree>
        </field>
    </record>
    <!--    Form View to edit data in a form-->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property_Form" editable="bottom">
                <header>
                    <button name="property_state_type_sold" type="object" string="SOLD"
                            icon="fa-check" confirm="Are you sure this property is sold ?"
                            attrs="{'invisible': ['|', ('status', '=', 'sold'), ('status', '=', 'canceled')]}"/>
                    <button name="property_state_type_canceled" type="object"
                            confirm="Are you sure to Cancel this property?" string="Cancel"
                            attrs="{'invisible': ['|', ('status', '=', 'sold'), ('status', '=', 'canceled')]}"/>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" widget="text_area" placeholder="Enter property name" cols="50" />
                        <br/>
                        <br/>
                    </h1>
                    <group>
                        <group>
                            <field name="status" readonly="True"/>
                            <field name="tag_id" widget="many2many_tags" placeholder="Select property tag"
                                   options="{'color_field': 'color'}"/>
                            <field name="property_type_id" placeholder="Select property type"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                            <field name="buyer_id"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                    <field name="active"/>
                                    <field name="total_area"/>
<!--                                    <field name="demo" password="True" widget="password"/>-->
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids"
                                       attrs="{'readonly': [('status', 'in', ['offer_accepted', 'sold', 'canceled'])]}">

                                    <tree string="Property Offers" editable="button"
                                          decoration-success="status == 'accepted'"
                                          decoration-danger="status == 'refused'">

                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <button name="property_offer_status_accept" type="object"
                                                string="Accept" icon="fa-check"
                                                attrs="{ 'invisible': ['|', ('status', '=', 'accepted'), ('status', '=', 'refused')] }"
                                                confirm="Are You Sure to Accept this offer ?"/>
                                        <button name="property_offer_status_refuse" type="object" string="Refuse"
                                                icon="fa-times"
                                                attrs="{ 'invisible': ['|', ('status', '=', 'accepted'),('status', '=', 'refused')] }"
                                                confirm="Are You Sure to Refuse this offer ?"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Others">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--     Kanban View to show all the data in tree wise-->
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.view.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="property_type_id" group_create="False" records_draggable="False">
                <field name="status"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                            <strong>
                                <h4>
                                    <field name="name"/>
                                </h4>
                            </strong>
                            <div>
                                <strong>
                                    <span>Status:</span>
                                </strong>
                                <field name="status" />
                            </div>
                            <span>Expected Price : </span>
                            <field name="expected_price"/> <br/>
                            <t t-if="record.status.raw_value == 'offer_received'">
                                <span>Best Offer :</span>
                                <field name="best_price"/>
                            </t>
                            <t t-if="record.status.raw_value == 'offer_accepted'">
                                <span>Best Offer :</span>
                                <field name="best_price"/> <br/>
                                <span>Selling Price :</span>
                                <field name="selling_price"/>
                            </t>
                            <field name="tag_id" widget="many2many_tags" placeholder="Select property tag"
                                   options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--Search View-->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="living_area" string="living area equal or above(sqm)"
                       filter_domain="[('living_area', '>=', self)]"/>
                <field name="living_area" string="living area bellow(sqm)"
                       filter_domain="[('living_area', '&lt;', self)]"/>
                <field name="property_type_id"/>
                <separator/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="inactive" name="active" domain="[('active', '=', False)]"/>
                <filter string="Available" name="status_check" domain="[('status', 'not in' , ['sold', 'canceled'])]"/>
                <group expand="1" string="Group By">
                    <filter string="Status" name="status"
                            context="{'group_by':'status', 'status':'new'}"/>
                    <filter string="Postcode" name="postcode"
                            context="{'group_by':'postcode'}"/>
                    <filter string="Property Type" name="property_type_id"
                            context="{'group_by':'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">estate.property</field>
        <field name="context">{'search_default_status_check': True}</field>
        <field name="view_mode">form,tree,kanban</field>
        <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'sequence':2, 'view_mode': 'tree', 'view_id': ref('estate.estate_property_view_tree')}),
                        (0, 0, {'sequence':3, 'view_mode': 'kanban', 'view_id': ref('estate.estate_property_view_kanban')}),
                        (0, 0, {'sequence':5, 'view_mode': 'form', 'view_id': ref('estate.estate_property_view_form')})]"/>
    </record>

</odoo>