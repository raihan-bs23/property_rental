<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Form View to edit data in a form-->
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property_Form" editable="bottom">
                <header>
                    <button name="property_state_type_sold" type="object" string="SOLD" icon="fa-check"/>
                    <button name="property_state_type_canceled" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" widget="text_area" cols="50"/>
                        <br/>
                        <br/>
                    </h1>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="tag_id" widget="many2many_tags"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                            <field name="buyer_id"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="garden_orientation"/>
                                    <field name="active"/>
                                    <field name="status"/>
                                    <field name="total_area"/>
                                </group>
                            </page>
                            <page string="Offers">
                                <field name="offer_ids">
                                    <tree>
                                        <field name="price"/>
                                        <field name="partner_id"/>
                                        <field name="validity"/>
                                        <field name="date_deadline"/>
                                        <button name="property_offer_status_accept" type="object"
                                                string="Accept" icon="fa-check"/>
                                        <button name="property_offer_status_refuse" type="object" string="Refuse" icon="fa-times"/>
                                        <field name="status"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Others">
                                <group>
                                    <field name="seller_id"/>
                                    <field name="buyer_id"/>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Tree View to show all the data in tree wise-->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property_Tree">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="status"/>
                <field name="seller_id"/>
            </tree>
        </field>
    </record>
    <!--Search View-->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="name"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="property_type_id"/>
                <separator/>

                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="inactive" name="active" domain="[('active', '=', False)]"/>
                <group expand="1" string="Group By">
                    <filter string="Status" name="status"
                            context="{'group_by':'status', 'status':'new'}"/>
                    <filter string="Postcode" name="postcode"
                            context="{'group_by':'postcode'}"/>
                    <filter string="Property Type" name="property_type_id"
                            context="{'group_by':'property_type_id'}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">property</field>
        <field name="res_model">estate.property</field>
    </record>

</odoo>