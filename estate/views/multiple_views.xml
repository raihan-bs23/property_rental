<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--     Tree View to show all the data in tree wise-->
    <record id="multi_view_tree" model="ir.ui.view">
        <field name="name">multi.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>

                <field name="name"/>
                <field name="property_type_id"/>
                <field name="tag_id" widget="many2many_tags" placeholder="Select property tag"
                       options="{'color_field': 'color'}"/>
                <field name="expected_price"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!--    Form View to edit data in a form-->
    <record id="multi_view_form" model="ir.ui.view">
        <field name="name">multi.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Multy_view_form" editable="bottom">
                <sheet>
                    <group>
                        <field name="name"/>
                        field name="expected_price"/>
                        <field name="postcode"/>
                        <field name="bedrooms"/>
                        <field name="living_area"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="multi_view_menu_action" model="ir.actions.act_window">
        <field name="name">Multi Views</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">form,tree</field>
        <field name="view_ids" eval="[(5, 0, 0),
                        (0, 0, {'sequence':2, 'view_mode': 'tree', 'view_id': ref('estate.multi_view_tree')}),
                        (0, 0, {'sequence':3, 'view_mode': 'form', 'view_id': ref('estate.multi_view_form')})]"/>
    </record>
</odoo>