<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_property_offers">
        <t t-foreach="docs" t-as="property">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="pt-5">
                        <div class="address row">
                            <div name="address" class="col-6" style="margin-left: auto">
                                <div name="address" class="col-3" style="margin-left: auto">
                                    <img src="https://e7.pngegg.com/pngimages/100/571/png-clipart-real-estate-estate-agent-house-property-management-houses-triangle-logo.png"
                                         alt="Not Found" height="100" width="100"/>
                                </div>
                                <h1 style="color:blue;">
                                    Shawpno Real Estate Ltd
                                </h1>
                                <address>
                                    <span>
                                        8th Floor, 2 Bir Uttam AK Khandakar Road, Mohakhali, Dhaka 1212
                                    </span>
                                </address>
                            </div>
                        </div>
                    </div>
                    <div class="page">

                        <h1>
                            <span t-field="property.name"/>
                        </h1>
                        <div>
                            <strong>Salesman:</strong>
                            <span t-field="property.seller_id"/>
                            <br/>
                            <strong>Expected Price:</strong>
                            <span t-field="property.expected_price"/>
                            <br/>
                            <strong>Status:</strong>
                            <span t-field="property.status"/>
                            <br/>
                            <strong>Property Tag:</strong>
                            <span t-field="property.tag_id"/>
                        </div>
                        <t t-if="property.status == 'new'">
                            <br/>
                            <h5>
                                <strong>There's No offer for this property :(</strong>
                            </h5>
                        </t>
                        <t t-else="">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Partner</th>
                                        <th>Validity(days)</th>
                                        <th>Deadline</th>
                                        <th>state</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                    <tr t-foreach="offers" t-as="offer">
                                        <td>
                                            <span t-field="offer.price"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.validity"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.date_deadline"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.status"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="report_property_offers_users_table">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="estate.report_partner_details_document">
                </t>
            </t>
        </t>
    </template>

    <template id="report_partner_details_document">
        <t t-call="web.external_layout">
            <div class="pt-5">
                <div class="address row">
                    <div name="address" class="col-6" style="margin-left: auto">
                        <div name="address" class="col-3" style="margin-left: auto">
                            <img src="https://e7.pngegg.com/pngimages/100/571/png-clipart-real-estate-estate-agent-house-property-management-houses-triangle-logo.png"
                                 alt="Not Found" height="100" width="100"/>
                        </div>
                        <h1 style="color:blue;">
                            Shawpno Real Estate Ltd
                        </h1>
                        <address>
                            <span>
                                8th Floor, 2 Bir Uttam AK Khandakar Road, Mohakhali, Dhaka 1212
                            </span>
                        </address>
                    </div>
                </div>
            </div>
            <div class="page">
                <div>
                    <h1>
                        <strong>Salesman:</strong>
                        <span t-field="doc.name"/>
                    </h1>
                    <t t-foreach="doc.property_ids" t-as="property">
                        <h3>
                            <span t-field="property.name"/>
                        </h3>
                        <strong>Expected Price:</strong>
                        <span t-field="property.expected_price"/>
                        <br/>
                        <strong>Status:</strong>
                        <span t-field="property.status"/>
                        <br/>
                        <strong>Property Tag:</strong>
                        <span t-field="property.tag_id"/>
                        <t t-if="property.status == 'new'">
                            <br/>
                            <h5>
                                <strong>There's No offer for this property :(</strong>
                            </h5>
                        </t>
                        <t t-else="">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Price</th>
                                        <th>Partner</th>
                                        <th>Validity(days)</th>
                                        <th>Deadline</th>
                                        <th>state</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="offers" t-value="property.mapped('offer_ids')"/>
                                    <tr t-foreach="offers" t-as="offer">
                                        <td>
                                            <span t-field="offer.price"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.partner_id"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.validity"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.date_deadline"/>
                                        </td>
                                        <td>
                                            <span t-field="offer.status"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>